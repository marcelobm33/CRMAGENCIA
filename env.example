# ===========================================
# CRM IA CAMPANHAS - Configurações
# ===========================================
# IMPORTANTE: Renomeie este arquivo para .env
# cp env.example .env

# Banco de Dados PostgreSQL
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=crm_campanhas
POSTGRES_USER=admin
POSTGRES_PASSWORD=change_me_in_production

# Redis
REDIS_URL=redis://redis:6379/0

# API FastAPI
API_SECRET_KEY=generate_a_secure_key_here_min_32_chars
API_ADMIN_EMAIL=admin@revenda.com
API_ADMIN_PASSWORD=admin123

# Integracoes Google Ads (deixar vazio para modo mock)
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=
GOOGLE_ADS_CUSTOMER_ID=

# Integracoes Meta/Facebook Ads (deixar vazio para modo mock)
META_APP_ID=
META_APP_SECRET=
META_ACCESS_TOKEN=
META_AD_ACCOUNT_ID=

# IA Analista
# Opcoes: mock, openai
AI_MODE=mock
OPENAI_API_KEY=

# ===========================================
# CRM Externo (MySQL - netcarrc01)
# ===========================================
# Conexao READ-ONLY com seu CRM existente
EXTERNAL_CRM_HOST=mysql.netcar-rc.com.br
EXTERNAL_CRM_PORT=3306
EXTERNAL_CRM_DATABASE=netcarrc01
EXTERNAL_CRM_USER=seu_usuario_aqui
EXTERNAL_CRM_PASSWORD=sua_senha_aqui

# Configuracoes Gerais
ENVIRONMENT=development
LOG_LEVEL=INFO

# URLs (para frontend)
NEXT_PUBLIC_API_URL=http://localhost:8000

